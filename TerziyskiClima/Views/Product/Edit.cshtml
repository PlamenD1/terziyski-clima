@{
}
<div class="action-container">
    <h1>Промени продукт</h1>
    <form method="post">
        <input type="hidden" name="txtId" value="@ViewBag.Product.Id" />
        <label>Име</label>
        <input class="form-control" type="text" name="txtName" value="@ViewBag.Product.Name"/>
        <label>Цена</label>
        <input class="form-control" type="number" step="0.01" min="0" name="txtPrice" value="@double.Parse(ViewBag.Product.Price.ToString())" />
        <label>Описание</label>
        <input class="form-control" type="text" name="txtDescription" value="@ViewBag.Product.Description" />
        <br />
        <button class="btn btn-success">Запази</button>
    </form>

</div>