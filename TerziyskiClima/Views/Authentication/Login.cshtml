@{
}
<div class="auth-container">
    <h1>Вход</h1>
    <form method="post">
        <p class="c-auth-label">E-mail</p>
        <input class="form-control c-auth-input" type="text" name="txtEmail" placeholder="E-mail..."/>
        <p class="c-auth-label">Парола</p>
        <input class="form-control c-auth-input" type="password" name="txtPassword" placeholder="Парола..."/>
        <br />
        @if (ViewBag.Error != null)
        {
            <h2 class="error">@ViewBag.Error</h2>
        }
        <button class="btn c-btn">Влез</button>
    </form>
</div>
