@{
}

@foreach(var item in ViewBag.Items)
            {
                <h1>Продукт: @item.Product.Name  / Количество: @item.Quantity</h1>
                <form method="post" asp-action="RemoveFromCart" asp-controller="Cart">
                    <input type="hidden" value="@item.Product.Id" name="productId" />
                    <button type="submit" >Премахни</button>
                </form>
            }